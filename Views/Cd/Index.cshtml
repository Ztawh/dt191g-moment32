@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<dt191g_moment32.Models.Cd>

@{
    ViewData["Title"] = "CD-skivor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CD-skivor</h2>

<div>
    <a class="btn add-btn" asp-action="Create">Ny CD <i class="fa-solid fa-music"></i></a>
</div>

<form asp-controller="Cd" asp-action="Index" method="get" class="form-search">
    <div>
        Sök titel: <input type="text" name="SearchString" id="search-box"/>
        <div class="btn-container flex">
            <input class="btn-submit" type="submit" value="Sök" />
            <a class="btn-filter" asp-controller="Cd" asp-action="Index">Visa alla</a>
        </div>
    </div>
</form>

<table class="table cd-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Playtime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Playtime)
                 min
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @{
                    if (item.Loan != null)
                    {
                       @:Utlånad 
                    }
                    else
                    {
                        @:Ledig
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CdId">Redigera</a> |
                <a asp-action="Details" asp-route-id="@item.CdId">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.CdId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>
